<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="settings_items">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/default_margin_size</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/default_margin_size</item>
        <item name="android:weightSum">6</item>
        <item name="android:background">@drawable/boxedittext</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="settings_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="global_checkbox">
        <item name="android:buttonTint">@color/main_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleY">@dimen/default_scale_checkbox</item>
        <item name="android:scaleX">@dimen/default_scale_checkbox</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="gobal_checkbox_tablerow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

</resources>